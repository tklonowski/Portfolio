<!DOCTYPE HTML>
<html data-ng-app="ngApp">
<head>
    <title data-ng-bind="'Tom Klonowski - ' + $root.title">Tom Klonowski</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <!--[if lte IE 8]><script src="css/ie/html5shiv.js"></script><![endif]-->
    <!--[if lte IE 8]><link rel="stylesheet" href="css/ie/v8.css" /><![endif]-->
    <!--[if lte IE 9]><link rel="stylesheet" href="css/ie/v9.css" /><![endif]-->

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/global")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/skel")
    @RenderSection("AngularJavascript", required: false)

</head>
<body>
    @Html.Partial("_Navigation")
    <div data-ng-view="" autoscroll="true">
        @RenderBody()
    </div>

    <!-- Contact -->
    <div class="wrapper style4">
        <article id="contact" class="container 75%">
            @Html.Partial("_FindMeOn")
            @Html.Partial("_Footer")
        </article>
    </div>

    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)
    <script>
        Global.init();
    </script>
</body>
</html>
